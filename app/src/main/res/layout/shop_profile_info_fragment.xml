<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#dcedc8">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:id="@+id/scrollShopProfile"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingPrefix">


            <ImageView
                android:id="@+id/shop_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:tint="#22000000"
                app:srcCompat="@android:drawable/ic_menu_report_image" />


            <ImageView
                android:id="@+id/shop_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="150dp"
                android:tint="#FFFFFF"
                app:srcCompat="@mipmap/ic_store_black_24dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/shop_image"
                tools:ignore="MissingPrefix"
                android:padding="30dp">

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    fontPath="fonts/Raleway-Light.ttf"
                    android:textColor="#757575"
                    android:textSize="30sp"
                    />

                <ImageButton
                    android:id="@+id/editProfileShopButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:tint="#757575"
                    app:srcCompat="@drawable/ic_edit" />

                <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/linearLayout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/shop_name"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mailProfileIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:tint="#757575"
                        app:srcCompat="@drawable/mail_icon" />

                    <TextView
                        android:id="@+id/shop_email"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_below="@+id/linearLayout_Points"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:textColor="#757575"/>

                </LinearLayout>


                <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/linearLayout_location"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout_email"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:tint="#757575"
                        app:srcCompat="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/shop_address"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentStart="true"
                        android:textColor="#757575"
                        android:ems="10" />


                </LinearLayout>





                <TextView
                    android:id="@+id/dealsTitle"
                    fontPath="fonts/OpenSans-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout_location"
                    android:text="Ofertas"
                    android:textAlignment="center"
                    android:textColor="#757575"
                    android:layout_marginTop="20dp"
                    android:paddingTop="20dp"
                    android:textSize="24sp"
                    android:background="@drawable/customtopborder_shop"/>

                </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>