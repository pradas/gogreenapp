<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DCEDC8"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="60dp"
                tools:context="pes.gogreenapp.Fragments.AboutUsFragment">

    <ImageView
        android:id="@+id/logo_about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/img_description_about_us"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/app_name_abous_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_about_us"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="@string/app_name"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/version_about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name_abous_us"
        android:layout_centerHorizontal="true"
        android:text="@string/version_about_us"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/copyright_about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/version_about_us"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text="@string/copyright_about_us"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/all_rights_about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/copyright_about_us"
        android:layout_centerHorizontal="true"
        android:text="@string/all_rights_reserved"
        android:textSize="12sp"/>

</RelativeLayout>
