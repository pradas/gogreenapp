<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              tools:ignore="MissingPrefix"
              android:id="@+id/employee_manager_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#DCEDC8"
              tools:context="pes.gogreenapp.Fragments.EmployeeManagerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_employees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayoutForm"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/linearLayoutForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                fontPath="fonts/Raleway-Light.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_employee" />

            <EditText
                android:id="@+id/edit_text_employee_username"
                fontPath="fonts/Raleway-Light.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_employee_username"
                android:inputType="text"
                android:textColor="#212121"
                android:textColorHint="#757575"
                android:theme="@style/campotextoregistrohard" />

            <EditText
                android:id="@+id/edit_text_employee_email"
                fontPath="fonts/Raleway-Light.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_employee_email"
                android:inputType="textEmailAddress"
                android:textColor="#212121"
                android:textColorHint="#757575"
                android:theme="@style/campotextoregistrohard" />

            <EditText
                android:id="@+id/edit_text_employee_password"
                fontPath="fonts/Raleway-Light.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password_employee"
                android:inputType="textPassword"
                android:textColor="#212121"
                android:textColorHint="#757575"
                android:theme="@style/campotextoregistrohard" />

            <Button
                android:id="@+id/button_add_employee"
                fontPath="fonts/Raleway-Light.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonregisterloginshape"
                android:text="@string/button_add"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
