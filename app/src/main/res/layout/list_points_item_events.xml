<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/givePointsByEvents"
    android:clickable="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userNumberByEvents" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNumberByEvents"
        android:id="@+id/userNameToGiveByEvents"
        android:hint="@string/usernameHint"
        android:layout_centerHorizontal="true" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroupGivePointsByEvents"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userNameToGiveByEvents">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonEvents"
            android:text="@string/events"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonPoints"
            android:text="@string/points"/>
    </RadioGroup>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerEvents"
        android:layout_below="@+id/radioGroupGivePointsByEvents"
        android:layout_centerHorizontal="true">
    </Spinner>
</RelativeLayout>