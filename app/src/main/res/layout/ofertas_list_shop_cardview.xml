<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_oferta_shop"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingPrefix">

        <ImageView
            android:id="@+id/ofertaImageShop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="1.0"
            android:scaleType="centerCrop"
            android:tint="#88212121"/>

        <TextView
            android:id="@+id/ofertaTitleShop"
            fontPath="fonts/Raleway-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ofertaPointsShop"
            fontPath="fonts/Raleway-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ofertaTitleShop"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/ofertaEndDateShop"
            fontPath="fonts/Raleway-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffffff"/>

        <ImageButton
            android:id="@+id/ofertaFavoriteButtonShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="90dp"
            android:alpha="1.0"
            android:background="@android:color/transparent"
            android:tint="#FFFFFF"
            card_view:srcCompat="@drawable/ic_fav_void"/>

        <ImageButton
            android:id="@+id/ofertaEditButtonShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="50dp"
            android:clickable="true"
            android:tag="favorite"
            android:background="@android:color/transparent"
            android:tint="#FFFFFF"
            card_view:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/ofertaDeleteButtonShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:tag="favorite"
            android:tint="#FFFFFF"
            card_view:srcCompat="@android:drawable/ic_menu_delete" />


    </RelativeLayout>

</android.support.v7.widget.CardView>