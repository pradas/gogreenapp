<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/givePointsByPoints"
    android:clickable="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userNumberByPoints" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNumberByPoints"
        android:id="@+id/userNameToGiveByPoints"
        android:hint="@string/usernameHint"
        android:textColor="@drawable/mainbuttontext"
        android:textColorHint="@drawable/mainbuttontext"
        android:theme="@style/campotextoregistro"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNameToGiveByPoints"
        android:id="@+id/pointsToGive"
        android:hint="@string/pointsHint"
        android:textColor="@drawable/mainbuttontext"
        android:textColorHint="@drawable/mainbuttontext"
        android:theme="@style/campotextoregistro"
        android:layout_centerHorizontal="true" />

</RelativeLayout>