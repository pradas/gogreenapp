<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pes.gogreenapp.Fragments.RewardDetailedFragment">


<TextView
        android:layout_width="570px"
        android:layout_height="wrap_content"
        android:id="@+id/titleDetailReward"
        android:textSize="24dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"   />

    <TextView
        android:layout_width="570px"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionDetailReward"
        android:text="50% de descuento en las entradas del próximo concierto de Iron Maiden"
        android:textSize="16dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/titleDetailReward"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="570px"
        android:layout_height="wrap_content"
        android:id="@+id/dateValidDetailReward"
        android:text="Promoción válida hasta el 09/04/2017"
        android:textSize="16dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/descriptionDetailReward"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/consultWebDetailReward"
        android:text="Consulta mes informació en http://www.fib.upc.edu/"
        android:textSize="16dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/dateValidDetailReward"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advertDetailReward"
        android:text="Promoció vàlida fins el 14-12-2017 i no acumulable a altres ofertes, cupons o promocions. Es prohibeix la venda d'aquest val. Només s'acceptarà un val per dia i titular."
        android:textSize="16dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/consultWebDetailReward"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructionsDetailReward"
        android:background="#fcc729"
        android:text="Per aconseguir aquest val pots fer-ho a través de la nostra APP mòbil o descarregar-te un PDF per a imprimir-lo tu mateix. Recorda que els vals són d'un sol ús!"
        android:textSize="16dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/advertDetailReward"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="#000000"
        android:id="@+id/barraHorizontal"
        android:layout_below="@+id/instructionsDetailReward" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="90dp"
        android:background="#000000"
        android:layout_below="@+id/barraHorizontal" />

    <ImageButton
        android:id="@+id/favoriteDetailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:tag="favorite"
        android:background="?android:selectableItemBackground"
        android:src="@mipmap/favorite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:text="CANJEAR"
        android:id="@+id/exchangeDetailReward" />

</RelativeLayout>