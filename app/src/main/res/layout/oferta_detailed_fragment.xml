<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ofertaDetailedFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#DCEDC8"
              android:orientation="vertical"
              android:weightSum="1"
              tools:context="pes.gogreenapp.Fragments.OfertaDetailedFragment"
              tools:ignore="MissingPrefix">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:ignore="MissingPrefix">

        <ImageView
            android:id="@+id/ofertaBackgroundImageProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="1.0"
            android:scaleType="centerCrop"
            android:tint="#88212121"/>

        <TextView
            android:id="@+id/titleDetailOferta"
            fontPath="fonts/Raleway-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dateValidDetailOferta"
            android:layout_alignEnd="@+id/favoriteDetailButtonOferta"
            android:layout_alignStart="@+id/dateValidDetailOferta"
            android:textColor="@color/colorWhite"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/dateValidDetailOferta"
            fontPath="fonts/Raleway-Regular.ttf"
            android:layout_width="570dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ofertaBackgroundImageProfile"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/favoriteDetailButtonOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:contentDescription="@string/aÃ±adir_a_favoritos"
            android:src="@mipmap/favorite"
            android:tag="favorite"
            android:tint="@color/colorWhite"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="30dp"
        android:text="Oferta"
        android:textColor="#000"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/descriptionDetailOfertaImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/ic_description_black_24dp"/>

        <TextView
            android:id="@+id/descriptionDetailOferta"
            fontPath="fonts/Raleway-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="#000000"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/instructionsDetailOfertaImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@mipmap/ic_info_black_24dp"
            />

        <TextView
            android:id="@+id/instructionsDetailOferta"
            fontPath="fonts/Raleway-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="#000000"
            android:textSize="15sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonGoToShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:background="@drawable/buttonregisterloginshape"
            android:text="@string/ir_a_la_tienda"
            android:textColor="@android:color/white"/>
    </RelativeLayout>


</LinearLayout>