<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/ofertaDetailedFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pes.gogreenapp.Fragments.OfertaDetailedFragment"
    android:weightSum="1"
    tools:ignore="MissingPrefix">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:ignore="MissingPrefix">

        <ImageView
            android:id="@+id/ofertaBackgroundImageProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="1.0"
            android:scaleType="centerCrop"
            android:tint="#88212121" />

        <ImageButton
            android:id="@+id/imageButtonBackOferta"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/titleDetailOferta"
            android:layout_alignTop="@+id/favoriteDetailButtonOferta"
            android:layout_marginTop="6dp"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:src="@mipmap/ic_back_white"
            android:tag="favorite" />

        <TextView
            android:id="@+id/titleDetailOferta"
            fontPath="fonts/Raleway-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="24dp"
            android:layout_above="@+id/dateValidDetailOferta"
            android:layout_alignStart="@+id/dateValidDetailOferta"
            android:layout_alignEnd="@+id/favoriteDetailButtonOferta" />

        <TextView
            android:id="@+id/dateValidDetailOferta"
            fontPath="fonts/Raleway-Regular.ttf"
            android:layout_width="570px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ofertaBackgroundImageProfile"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/favoriteDetailButtonOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:src="@mipmap/favorite"
            android:tag="favorite"
            android:tint="@color/colorWhite" />
    </RelativeLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="30dp"
        android:text="Oferta"
        android:textColor="#000"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/descriptionDetailOfertaImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/ic_description_black_24dp" />

        <TextView
            android:id="@+id/descriptionDetailOferta"
            fontPath="fonts/Raleway-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titleDetailOferta"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/instructionsDetailOfertaImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@mipmap/ic_info_black_24dp"
            />

        <TextView
            android:id="@+id/instructionsDetailOferta"
            fontPath="fonts/Raleway-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/advertDetail"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>