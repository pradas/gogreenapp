<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_image_edit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <EditText
        android:id="@+id/user_name_edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_image"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="nombre" />

    <TextView
        android:id="@+id/user_nickname_edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_edit_user"
        android:ems="10"
        android:text="alias" />

    <TextView
        android:id="@+id/user_points_edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_nickname_edit_user"
        android:ems="10"
        android:text="points" />

    <TextView
        android:id="@+id/gobro_since_edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_points_edit_user"
        android:ems="10"
        android:text="Gobro desde: " />

    <TextView
        android:id="@+id/user_creation_date_edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gobro_since_edit_user"
        android:ems="10"
        android:inputType="date"/>

    <Button
        android:id="@+id/save_edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_creation_date_edit_user"
        android:text="Guardar" />

    <TextView
        android:id="@+id/birthdate_edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save_edit_profile_button"
        android:ems="10"
        android:text="Fecha de nacimiento" />

    <TextView
        android:id="@+id/user_birthdate_edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthdate_edit_user"
        android:ems="10"
        android:inputType="date"/>

    <Button
        android:id="@+id/edit_birthdate_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_birthdate_edit_user"
        android:ems="10"
        android:text="edita date"/>

    <TextView
        android:id="@+id/actual_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_birthdate_user"
        android:ems="10"
        android:text="Puntos actuales: " />

    <TextView
        android:id="@+id/user_currentpoints_edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actual_points"
        android:ems="10" />

    <EditText
        android:id="@+id/user_email_edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_currentpoints_edit_user"
        android:ems="10" />

</RelativeLayout>